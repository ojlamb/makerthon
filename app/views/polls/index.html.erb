<% if current_user %>
  <% if @polls.any? %>
      <% @polls.each do |poll| %>
        <h1><%= link_to  poll.name, poll_path(poll) %></h1>
        <% if current_user.id == poll.user_id%>
          <h2><%= link_to "delete", poll_path(poll), method: :delete %></h2>
        <% end %>
          <p>
            <%= @user_vote %>
          </p>
        <% if @user_vote < 1 && @user_vote > -2 %>
          <%= link_to "Upvote", upvote_poll_path(poll), method: :put %>
        <% end %>
        <% if @user_vote > -1 && @user_vote < 2 %>
          <%= link_to "Downvote", downvote_poll_path(poll), method: :put %>
        <% end %>
      <% end %>
  <% else %>
    <h2>No polls yet</h2>
    <%= link_to "Add a poll", new_poll_path %>
  <% end %>
<% end  %>
